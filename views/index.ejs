<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Cow Milk Production</title>
</head>
<body>
  <h1>Cow Milk Production System</h1>

  <form action="/cow" method="POST">
    <label for="cowIds">Enter Cow IDs (comma separated):</label>
    <input type="text" id="cowIds" name="cowIds" required>
    <button type="submit">Check Cow</button>
  </form>

  <% if (error) { %>
    <p style="color: red;"><%= error %></p>
  <% } %>

  <% if (cows && cows.length > 0) { %>
    <h2>Cow Information</h2>
    <ul>
      <% cows.forEach(cow => { %>
        <li>
          <strong>ID:</strong> <%= cow.cowId %> |
          <strong>Breed:</strong> <%= cow.breed %> |
          <strong>Age:</strong> <%= cow.ageYears %> years and <%= cow.ageMonths %> months |
          <strong>Milk Production:</strong> <%= cow.milkProduction %> liters
        </li>
      <% }) %>
    </ul>
    <h3>Total Milk Production: <%= totalMilkProduction %> liters</h3>
  <% } %>
</body>
</html>
